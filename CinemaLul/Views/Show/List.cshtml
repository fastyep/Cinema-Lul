@model IEnumerable<CinemaLul.Models.ShowView>

@{
    ViewBag.Title = "Список сеансов";
}

<h2>Список сеансов</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название фильма
        </th>
        <th>
            Время сеанса
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.name
        </td>
        <td>
            @item.time
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
