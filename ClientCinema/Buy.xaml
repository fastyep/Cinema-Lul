        <TextBox x:Name="count" Margin="10,78,0,0" TextWrapping="Wrap" Text="1" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="73"/>
        <Label Content="Количество" Margin="88,76,0,0" FontSize="10" RenderTransformOrigin="1.065,0.543" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="73"/>
        <Button Content="Купить" Margin="10,106,0,0" Click="Button_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75"/>
        <Label x:Name="err" Content="" Margin="90,103,10,10" RenderTransformOrigin="0.165,0.256"/>
    </Grid>
</Window>
